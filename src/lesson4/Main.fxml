<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lesson4.Controller"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@/lesson4/css/style.css"/>
    </stylesheets>

    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Connect to..."/>
                <MenuItem text="Exit" onAction="#exitBtnClicked"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TextArea fx:id="textArea" editable="false" focusTraversable="false"/>
    </center>
    <bottom>
        <AnchorPane>
            <TextField fx:id="textField" promptText="Enter your message here" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="20"
                       onAction="#sendMessage"/>
            <Button text="Send" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" onAction="#sendMessage"/>
        </AnchorPane>
    </bottom>

</BorderPane>
